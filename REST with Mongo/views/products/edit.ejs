<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Edit Product</title>
    </head>
    <body>
        <h1>Edit Product</h1>
        <form
            action="/products/<%=foundProduct._id%>?_method=put"
            method="post"
        >
            <label for="name">Product name</label>
            <input
                id="name"
                type="text"
                name="name"
                placeholder="product name"
                value="<%= foundProduct.name%> "
            />
            <br />
            <label for="price">Product price</label>
            <input
                id="price"
                type="number"
                name="price"
                value="<%=foundProduct.price%>"
            />
            <br />
            <label for="category">Product category</label>
            <select name="category" id="category">
                <!-- <option value="fruit" <%=//foundProduct.category === 'fruit' ? 'selected' :''%> >fruit</option>
                <option value="vegteable" <%=//foundProduct.category === 'vegteable' ? 'selected' :''%>>vegteable</option>
                <option value="dairy" <%=//foundProduct.category === 'dairy' ? 'selected' :''%>>dairy</option> -->
                <% for(let category of categories ) { %>
                <option value="<%= category %>" <%="category" %>
                    <%=foundProduct.category === category ? 'selected' :''%>>
                    <%= category %>
                </option>
                <% } %>
            </select>
            <button>Edit</button>
        </form>
        <a href="/products">back to all products</a>
    </body>
</html>
